<html>
    <head>
        <title>Salon Book</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
    <body>
        <div class="container">
        <h1>{{ stylists.getName }}</h1>

        {% if stylists is not empty %}
            <p>Here are all the Clients:</p>
            <ul>
                {% for stylist in stylists %}
                    <li>{{ stylist.getName }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        <form action='/stylists' method='post'>
            <label for='name'>Stylist Name</label>
            <input id='name' name='name' type='text'>

            <button type='submit'>Add a stylist</button>
        </form>
        <form action='/delete_stylists' method='post'>
            <button type='submit' class="btn btn-info">Clear</button>
        </form>

        <p><a href='/'>Home</a></p>
    </div>
    </body>
</html>
